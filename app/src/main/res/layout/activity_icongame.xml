<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ellophantdesign.haayhappen.Buttons.gameActivity">


    <!--Text in the middle of the screen: "Hit the color you see as fast as you can!"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.49"
                android:text="Time:"
                android:textColor="@color/common_google_signin_btn_text_light_focused"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/timerTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.53"
                android:text="30"
                android:textColor="@color/common_google_signin_btn_text_light_focused"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/lifetextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.27"
                android:text="Lifes"
                android:textColor="@color/common_google_signin_btn_text_light_focused"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/lifestextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="@color/common_google_signin_btn_text_light_focused"
                android:textSize="30sp"
                android:layout_weight="0.51" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score:"
                android:textColor="@color/common_google_signin_btn_text_light_focused"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/gamescore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/common_google_signin_btn_text_light_focused"
                android:textSize="30sp" />

        </LinearLayout>

        <Button
            android:id="@+id/screencolor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_height="100dp">

            <Button
                android:id="@+id/btn_red"
                android:layout_weight="1"
                android:background="@drawable/ic_hamburger"
                android:layout_width="100sp"
                android:layout_height="100sp" />

            <Button
                android:id="@+id/btn_green"
                android:layout_height="100sp"
                android:layout_weight="1"
                android:background="@drawable/ic_lettuce"
                android:onClick="onGreenPressed"
                android:layout_width="100sp" />

            <Button
                android:id="@+id/btn_beige"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ic_fried_egg"
                android:onClick="onBeigePressed" />

            <Button
                android:id="@+id/btn_yellow"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ic_cupcake"
                android:onClick="onYellowPressed" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/textview_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="188dp"
        android:text="Hit the icon you see as fast as you can"
        android:textColor="@color/common_google_signin_btn_text_light_focused"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_start_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_instructions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/grey_button_style"
        android:padding="20dp"
        android:text="Start Game!"
        android:textColor="@color/common_google_signin_btn_text_light_default" />

</RelativeLayout>
