<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.uidp0609.testapp.gameActivity">


    <!--Text in the middle of the screen: "Hit the color you see as fast as you can!"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.49"
                android:text="Time:"
                android:textColor="@color/common_google_signin_btn_text_light_focused" />

            <TextView
                android:id="@+id/timerTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.44"
                android:text="1:00"
                android:textColor="@color/common_google_signin_btn_text_light_focused" />

            <TextView
                android:id="@+id/lifetextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.23"
                android:text="Lifes"
                android:textColor="@color/common_google_signin_btn_text_light_focused" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.19"
                android:contentDescription=""
                app:srcCompat="@android:drawable/ic_input_add" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription=""
                app:srcCompat="@android:drawable/ic_input_add" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:contentDescription=""
                app:srcCompat="@android:drawable/ic_input_add" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.67"
                android:text="Score:"
                android:textColor="@color/common_google_signin_btn_text_light_focused" />

            <TextView
                android:id="@+id/gamescore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.48"
                android:text="0"
                android:textColor="@color/common_google_signin_btn_text_light_focused" />

        </LinearLayout>

        <Button
            android:id="@+id/screencolor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@color/colorBlue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/btn_red"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorRed" />

            <Button
                android:id="@+id/btn_green"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorGreen"
                android:onClick="onGreenPressed" />

            <Button
                android:id="@+id/btn_beige"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorBeige"
                android:onClick="onBeigePressed" />

            <Button
                android:id="@+id/btn_yellow"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorYellow"
                android:onClick="onYellowPressed" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_start_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_instructions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_style"
        android:padding="20dp"
        android:text="Start Game!"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textview_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="165dp"
        android:text="Hit the color you see as fast as you can!"
        android:textColor="@color/common_google_signin_btn_text_light_focused"
        android:textSize="18sp" />

</RelativeLayout>
